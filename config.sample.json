{
  "server": {
    "name": "iMessage Advanced Insights",
    "version": "2.4.0",
    "port": 5000,
    "log_level": "INFO",
    "max_concurrent_requests": 5
  },
  
  "database": {
    "use_sharding": null,
    "minimal_mode": false,
    "pool_size": 10,
    "shard_size_months": 6,
    "auto_optimize": true,
    "connection_timeout": 30
  },
  
  "memory": {
    "enable_monitoring": true,
    "limit_mb": 2048,
    "high_threshold": 0.75,
    "low_threshold": 0.5,
    "monitor_interval": 5
  },
  
  "logging": {
    "file_logging": true,
    "console_logging": true,
    "log_directory": "~/.imessage_insights/logs",
    "log_filename": "mcp_server.log",
    "max_log_size": 10485760,
    "backup_count": 3
  },
  
  "privacy": {
    "sanitize_messages": true,
    "sanitize_contacts": true,
    "consent_expiry_hours": 24,
    "max_access_log_entries": 1000
  },
  
  "features": {
    "enable_network_visualization": true,
    "enable_topic_analysis": true,
    "enable_sentiment_analysis": true,
    "enable_message_search": true,
    "enable_group_chat_analysis": true,
    "enable_contact_analytics": true
  },
  
  "analysis": {
    "max_messages_per_analysis": 1000,
    "sentiment_analysis_threshold": 0.5,
    "topic_count": 5,
    "keyword_count": 20,
    "default_date_range_days": 30,
    "enable_advanced_metrics": true
  },
  
  "resources": {
    "max_image_size_mb": 5,
    "cache_expiry_minutes": 60,
    "enable_visualization_cache": true,
    "visualization_cache_size": 50,
    "network_visualization_format": "png"
  }
}
